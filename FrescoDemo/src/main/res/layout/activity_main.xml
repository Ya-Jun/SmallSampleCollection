<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="正常" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="圆形" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="圆角+边界" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageview1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            fresco:placeholderImage="@drawable/holder_image" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageview2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            fresco:placeholderImage="@drawable/holder_image"
            fresco:roundAsCircle="true"
            fresco:roundWithOverlayColor="#aaaaaa" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageview3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            fresco:placeholderImage="@drawable/holder_image"
            fresco:roundTopLeft="false"
            fresco:roundTopRight="false"
            fresco:roundWithOverlayColor="#aaaaaa"
            fresco:roundedCornerRadius="20dp"
            fresco:roundingBorderColor="#000000"
            fresco:roundingBorderWidth="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="覆盖图" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="背景+渐变" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="背景+加载失败" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageview4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            fresco:overlayImage="@mipmap/ic_launcher"
            fresco:placeholderImage="@drawable/holder_image"
            fresco:roundAsCircle="true" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageview5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            fresco:backgroundImage="@color/colorAccent"
            fresco:fadeDuration="3000"
            fresco:placeholderImage="@drawable/holder_image"
            fresco:roundAsCircle="true" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageview6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            fresco:backgroundImage="@color/colorPrimary"
            fresco:failureImage="@mipmap/ic_launcher"
            fresco:placeholderImage="@drawable/holder_image"
            fresco:retryImageScaleType="centerCrop" />


    </LinearLayout>
</LinearLayout>
